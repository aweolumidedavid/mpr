# Application Configuration
APP_NAME=mpr

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mpr_db
DB_USERNAME=postgres
DB_PASSWORD=password

# JPA Configuration
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=true
HIBERNATE_FORMAT_SQL=true

# Flyway Configuration
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TIMEOUT=2000ms

# Server Configuration
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/

# Swagger Configuration
SWAGGER_API_DOCS_PATH=/api-docs
SWAGGER_UI_PATH=/swagger-ui.html
SWAGGER_OPERATIONS_SORTER=method

# Logging Configuration
LOG_LEVEL_MPR=DEBUG
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_HIBERNATE_SQL=DEBUG
LOG_LEVEL_HIBERNATE_BINDER=TRACE

# Security Configuration
SECURITY_USER_NAME=admin
SECURITY_USER_PASSWORD=admin123
CSRF_ENABLED=false
PERMITTED_PATHS=/swagger-ui/**, /api-docs/**, /v3/api-docs/**, /public/**

# Scheduling Configuration
SCHEDULE_INTERVAL=0 15 19 ? * WED
SCHEDULE_ENABLED=true
SCHEDULE_TIMEZONE=UTC 